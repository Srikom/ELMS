<% if @leaveApplications.empty? %>
	<center><h3><i>There is no Leave Applications at the moment</i></h3></center>
<% else %>
<center>
<div>
	<table size='100%' id='managerTable'>
		<tr>
			<th>ID</th>
			<th>Department</th>
			<th>Date Of Submission</th>
			<th>Status</th>
		</tr>
		<% @leaveApplications.each do |l| %>
			<tr>
				<td><%= link_to l.id,leave_application_path(l.id)%></td>
				<td><%= l.department_name %></td>
				<td><%= l.created_at.strftime('%d/%m/%Y') %></td>
				<td><%= l.status_name %></td>
			</tr>
		<% end %>
	</table>
</div>
</center>
<% end %>