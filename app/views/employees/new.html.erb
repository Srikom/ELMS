<h1>Sign Up</h1><br>

<%= form_for @employees, :url => new_employee_path do |f| %>
 
<div><%= f.label :name %><br />
<%= f.text_field :name %></div><br>
 
<div><%= f.label :password %><br />
<%= f.password_field :password %></div><br>
 
<div><%= f.label :password_confirmation %><br />
<%= f.password_field :password_confirmation %></div><br>

<div><%= f.label :department %><br />
<%= f.text_field :department_id %></div><br>

<div><%= f.label :role %><br />
<%= f.text_field :role_id %></div><br>

<div><%= f.label :phone %><br />
<%= f.text_field :phone %></div><br>

<div><%= f.label :email %><br />
<%= f.email_field :email, :autofocus => true %></div><br>

 
<div><%= f.submit "Sign up" %></div>

<% end %>
